<div style="background-color:rgb(236, 192, 129) ;">
{{>message}}
    <form action="/user/register" method="POST" class="row gy-2 gx-3 align-items-center" id="dataForm">
        <div class="w-50 container mt-5">
            <div class="input-group mb-2 ">
                <span class="input-group-text">name</span>
                <input type="text" name="name" aria-label="email" class="form-control" placeholder='請輸入name'
                    minlength="1">
            </div>
            <div class="input-group mb-2 ">
                <span class="input-group-text ">email</span>
                <input type="email" name="email" aria-label="email" class="form-control" placeholder='請輸入email'
                    required >
            </div>
            <div class="input-group mb-2 ">
                <span class="input-group-text">password</span>
                <input type="password" aria-label="password" class="form-control" name="password" minlength="4"
                    maxlength="12" placeholder='請輸入password'>
            </div>
            <div class="input-group mb-2 ">
                <span class="input-group-text">confirm password</span>
                <input type="password" aria-label="confirmPassword" class="form-control" name="confirmPassword"
                    minlength="4" maxlength="12" placeholder='請輸入相同的password'>
            </div>
            <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="submit_button"> 註冊 <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>